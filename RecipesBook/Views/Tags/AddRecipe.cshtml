@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Tag

<h3>Add a recipe</h3>
<h4>Add recipe from a list below for @Html.DisplayFor(model =>model.TagDescription)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model=>model.TagId)
  @Html.Label("Select recipe: ")
  @Html.DropDownList("RecipeId")
  <input type="button submit" class="btn btn-warning" value="Save a recipe">
}

<button class="btn btn-dark">@Html.ActionLink("Back to tags", "Index")</button>