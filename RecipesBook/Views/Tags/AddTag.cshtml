@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Tag

<h3>Add a tag</h3>
<h4>Add tag to the recipe from a list below: @Html.DisplayFor(model =>model.TagDescription)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model=>model.TagId)
  @Html.Label("Select recipe: ")
  @Html.DropDownList("RecipeId")
  <input type="button submit" class="btn btn-warning" value="Save a tag">
}

<button class="btn btn-dark">@Html.ActionLink("Back to all tags", "Index")</button>