@{
  Layout = "_Layout";
}

@using RecipeBook.Models;
@model IEnumerable<RecipeBook.Models.Tag>

<h1>Tags for @User.Identity.Name</h1>

@if (Model.Any())
{
    <ul>
      @foreach (Tag tag in Model)
    {
          <li>@Html.ActionLink($"{tag.TagDescription}", "Details", new { id = tag.TagId })</li>
    }
   </ul>
} 
else
{
  <h3>No tags have been added yet!</h3>
}

<p>@Html.ActionLink("Add new tag", "Create")</p>
<p>@Html.ActionLink("Back to my account", "Index", "Account")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>